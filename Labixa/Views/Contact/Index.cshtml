<!-- subheader close -->
<!-- content begin -->
<div id="content" class="no-top">
    <section id="de-map" aria-label="map-container">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="map-container map-fullwidth img-rounded">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.4271284396177!2d106.62027581480076!3d10.778561792320058!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752c1b929a9a43%3A0xb4ac8f7b43b2fe3f!2zMzA3LzQxIFRo4bqhY2ggTGFtLCBQaMO6IFRo4bqhbmgsIFTDom4gUGjDuiwgVGjDoG5oIHBo4buRIEjhu5MgQ2jDrSBNaW5o!5e0!3m2!1sen!2s!4v1619011481432!5m2!1sen!2s" width="600" height="450" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="container">
        <div class="row">

            <div class="col-md-8">
                <h3>Gửi thông tin liên hệ</h3>
                <form name="contactForm" id='contact_form' method="post" action='https://www.designesia.com/themes/archi-main/email.php'>
                    <div class="row">
                        <div class="col-md-6">
                            <div id='name_error' class='error'>Hãy nhập tên của bạn</div>
                            <div>
                                <input type='text' name='name' id='name' class="form-control" placeholder="Tên*">
                            </div>

                            <div id='email_error' class='error'>Hãy nhập email của bạn</div>
                            <div>
                                <input type='text' name='email' id='email' class="form-control" placeholder="Email*">
                            </div>

                            <div id='phone_error' class='error'>Hãy nhập số điện thoại của bạn</div>
                            <div>
                                <input type='text' name='phone' id='phone' class="form-control" placeholder="Số Điện Thoại*">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div id='message_error' class='error'>Hãy nhập ý kiến của bạn</div>
                            <div>
                                <textarea name='message' id='message' class="form-control" placeholder="Nhập Nội Dung*"></textarea>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <p id='submit'>
                                <input type='submit' id='send_message' value='Gửi Liên Hệ' class="btn btn-line">
                            </p>
                            <div id='mail_success' class='success'>Tin nhắn của bạn đã được gửi đi thành công.</div>
                            <div id='mail_fail' class='error'>Xin Lỗi, đã xảy ra lỗi khi gửi tin nhắn của bạn.</div>
                        </div>
                    </div>
                </form>
            </div>

            <div id="sidebar" class="col-md-4">

                <div class="widget widget_text">
                    <h3>Contact Info</h3>
                    <address>
                        <span>307/41 Thạch Lam, P.Phú Thạnh, Q.Tân Phú, HCM</span>
                        <span><strong>Phone:</strong>0906710739</span>
                        <span><strong>Email:</strong><a href="mailto:contact@Daquy.com">contact@Daquy.com</a></span>
                        <span><strong>Facebook:</strong><a href="https://www.facebook.com/Trang-s%E1%BB%A9c-Gems-Tek-105273135036909/?ref=page_internal">&emsp; Trang sức Gems-Tek</a></span>
                    </address>
                </div>
            </div>
        </div>
    </div>
</div>
